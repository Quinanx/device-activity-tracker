{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "npm install && cd client && npm install && npm run build && cd .."
  },
  "deploy": {
    "startCommand": "npm run start:server",
    "restartPolicyType": "always",
    "restartPolicyMaxRetries": 5
  }
}
